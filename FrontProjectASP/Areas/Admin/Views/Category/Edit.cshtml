@model CategoryEditVM

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong>Edit</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input asp-for="CategoryName" class="form-control mt-3" placeholder="Name">
                    <span class="text-danger" asp-validation-for="CategoryName"></span>

                    <img src="~/assets/images/@Model.ExistCategoryImage" class="mt-3" />

                    <label class="d-block mt-3">Add new category image</label>
                    <input asp-for="NewCategoryImage" class="form-control mt-3">
                    <span class="text-danger" asp-validation-for="NewCategoryImage"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                </a>
            </form>
        </div>
    </div>
</div>


