@model SliderCreateVM

<div class="container">
    <div class="card">
        <div class="card-header">
            <strong>Create</strong>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input asp-for="Title" class="form-control mt-3" placeholder="Enter slider Title">
                    <span class="text-danger" asp-validation-for="Title"></span>

                    <input asp-for="Description" class="form-control mt-3" placeholder="Enter slider description">
                    <span class="text-danger" asp-validation-for="Description"></span>

                    <input asp-for="Name" class="form-control mt-3" placeholder="Enter slider name">
                    <span class="text-danger" asp-validation-for="Name"></span>

                    <input asp-for="SliderNumber" class="form-control mt-3" placeholder="Enter slider number">
                    <span class="text-danger" asp-validation-for="SliderNumber"></span>

                    
                    <input asp-for="Image" class="form-control mt-3">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Submit
                </button>
                <a type="reset" asp-action="Index" class="btn btn-danger btn-sm">
                    <i class="fa fa-ban"></i> Reset
                </a>
            </form>
        </div>
    </div>
</div>

