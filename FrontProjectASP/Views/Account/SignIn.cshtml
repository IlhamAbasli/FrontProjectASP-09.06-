@model LoginVM
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Header.cshtml";
}

@section css{
    <link rel="stylesheet" href="~/assets/sass/pages/login/login.css">
}

@section js{
    <script src="~/assets/js/cart.js"></script>
}

<section id="login-header">
    <div class="container-main">
        <div class="content">
            <h1>My Account</h1>
            <a href="home.html">Home</a>
            <span>My Account</span>
        </div>
    </div>
</section>


<section id="login-area">
    <div class="container-main">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8">
                <div class="login-area text-center">
                    <div class="login-header">
                        <h1>Login to Shofy.</h1>
                        <p>Don’t have an account? <a asp-controller="Account" asp-action="SignUp">Create a free account</a></p>
                    </div>
                    <div class="social-login">
                        <ul>
                            <li><img src="~/assets/images/google.svg" alt="">Sign in with Google</li>
                            <li><img src="~/assets/images/facebook.svg" alt=""></li>
                            <li><img src="~/assets/images/apple.svg" alt=""></li>
                        </ul>
                    </div>
                    <div class="mail-login-header">
                        <p>or Sign in with <a href="">Email</a></p>
                        <div class="line"></div>
                    </div>
                    <form class="login-side" asp-controller="Account" asp-action="SignIn"> 
                        <div class="input-area">
                            <label for="email">Your email or username</label>
                            <input asp-for="EmailOrUsername" id="email" placeholder="Email or username">
                        </div>
                        <div class="input-area">
                            <label for="password">Password</label>
                            <input asp-for="Password" id="password" placeholder="Min. 6 character">
                        </div>
                        <div class="checkbox">
                            <input class="d-none" type="checkbox" id="demoCheckbox" name="checkbox" value="1">
                            <label for="demoCheckbox">Remember Me</label>
                            <a href="">Forgot Password?</a>
                        </div>
                        <div class="login">
                            <button type="submit">Login</button>
                        </div>
                    </form>
                    <div class="text-danger mt-3" asp-validation-summary="ModelOnly">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-shape d-none d-xl-block">
        <img src="~/assets/images/login-shape-1.png" alt="" class="shape1">
        <img src="~/assets/images/login-shape-2.png" alt="" class="shape2">
        <img src="~/assets/images/login-shape-3.png" alt="" class="shape3">
        <img src="~/assets/images/login-shape-4.png" alt="" class="shape4">
    </div>
</section>

